@model Models.SignInModel;
@{
    <style>
        .signin {
        border-radius: 8px;
        box-shadow: 0px 0px 25px gray;
        }
    </style>
}

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <h3>@ViewBag.Message</h3>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="post" asp-action="SignIn" asp-controller="Auth">
    <section class="container h-100 w-100 mt-5 d-flex justify-content-center align-items-center singin">
        <div class="row">
            <div class="col-9">
                <div class="form-group">
                    <label class="form-label" asp-for="@Model.Name"></label>
                    <input type="text" class="form-control" asp-for="@Model.Name" />
                </div>
            </div>
            <div class="col-9">
                <div class="form-group">
                    <label class="form-label" asp-for="@Model.Password"></label>
                    <input type="password" asp-for="@Model.Password" class="form-control" />
                </div>
            </div>
            <div class="col-9 mt-2">
                <input type="submit" class="btn btn-primary w-100" />
            </div>
        </div>
    </section>
</form>
